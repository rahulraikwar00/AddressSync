{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"]
			// Add other path aliases as needed
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"extends": "./.svelte-kit/tsconfig.json"
}
